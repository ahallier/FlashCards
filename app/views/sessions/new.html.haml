%h1 Login

= form_tag login_create_path do

  = label_tag 'login_user', 'Email'
  = text_field :session, :email, :id=> 'login_user'

  = label_tag 'login_password', 'Password'
  = text_field :session, :password, :id=> 'login_password'
  

  = submit_tag 'Login to my account', :id=> 'login_submit'
= link_to 'Sign-up for an account', new_user_path, :id=>'signup'

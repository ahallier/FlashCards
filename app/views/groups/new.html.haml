%h1 Create New Group

= form_tag add_group_path, :method =>:get do


  = label :deck, :title, 'Title'
  = text_field :deck, 'title'

  = label :deck, :category, 'Invite Users'
  = f.select :user_name, Users.all.collect {|p| [ p.name ] } %>
  
  = label :deck, :public, 'Make Public?'
  = select :deck, :public, ['Yes', 'No']

  = submit_tag 'Save Changes'